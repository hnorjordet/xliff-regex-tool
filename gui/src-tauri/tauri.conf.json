{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "XLIFF RegEx Tool",
  "version": "0.4.5",
  "identifier": "com.havardnorjordet.xliff-regex-tool",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build && bash ../build_cli.sh",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "XLIFF RegEx Tool",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin/xliff_cli",
      "../../USER_GUIDE.html",
      "../../CHANGELOG.md"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/hnorjordet/xliff-regex-tool/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhENEFDODgzQkFGQ0E4MTYKUldRV3FQeTZnOGhLalpyRlBVOFpkSWdtSWc2TkoyT2xaQjg4dVRvbHNlQkptMEIwWHVKdUxxS0oK"
    }
  }
}
